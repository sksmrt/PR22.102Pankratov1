<Window x:Class="PR22._102Pankratov1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR22._102Pankratov1"
        mc:Ignorable="d"
        Title="PankratovVR1" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите двенадцатизначное число:"/>
            <TextBox x:Name="InputTextBox" Width="250"/>
            <Button Content="Проверить" Width="150" Click="CheckDigits_Click" Margin="10" Height="29"/>
            <TextBlock Text="Результат:"/>
            <TextBox x:Name="ResultTextBox" Width="300" Height="100" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
